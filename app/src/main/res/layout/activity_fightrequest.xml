<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/red_weak"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="250dp">

    <!-- 타이틀바 -->

    <TextView
        android:text="결투 신청"
        android:textSize="25sp"
        android:textColor="@color/dark_grey"
        android:fontFamily="@font/bm"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!-- //end 타이틀바 -->

    <View
        android:background="@color/dark_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:text="결투를 하시겠습니까?"
        android:textSize="25sp"
        android:textColor="@color/dark_grey"
        android:fontFamily="@font/bm"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/tv_counterpart"
        android:text="상대정보"
        android:textSize="20sp"
        android:textColor="@color/dark_grey"
        android:fontFamily="@font/bm"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="승낙"
            android:textColor="@color/red_weak"
            android:textSize="30dp"
            android:fontFamily="@font/bm"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/console_button"/>

        <Button
            android:id="@+id/btn_refuse"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="거절"
            android:textColor="@color/red_weak"
            android:textSize="30dp"
            android:fontFamily="@font/bm"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/console_button"/>

    </LinearLayout>


    <View
        android:background="@color/dark_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:text="당신의 광기를 보여주세요"
        android:textSize="25dp"
        android:textColor="@color/dark_grey"
        android:gravity="center"
        android:background="#00000000"
        android:fontFamily="@font/bm"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!--// 닫기 버튼 -->
</LinearLayout>