<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:elevation="20dp"
    android:background="@drawable/console_button"
    android:orientation="horizontal"
    android:id="@+id/address_item"
    tools:context=".MainActivity"
    android:layout_margin="3dp">


    <ImageView
        android:layout_marginLeft="7dp"
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/attack"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:layout_weight="10"
        android:layout_marginVertical="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dark_grey"
        android:layout_margin="2dp"
        android:layout_weight="3"
        android:layout_gravity="top">


        <TextView
            android:id="@+id/tv_Nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/bm"
            android:text="Example_Nickname"
            android:layout_weight="1"
            android:textColor="@color/red_weak"
            android:gravity="center"/>

        <View
            android:background="@color/red_weak"
            android:layout_width="match_parent"
            android:layout_weight="0.01"
            android:layout_height="1dp" />


        <TextView
            android:id="@+id/tv_WinLose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/bm"
            android:textColor="@color/red_weak"
            android:layout_weight="1"
            android:text="Example_WinLose"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>